# ============================================
# ECO-LENS Configuration
# ============================================
# Copy this file to .env and replace with real values

# ---- OpenWeatherMap API ----
# Get your free API key at: https://openweathermap.org/api
# Used for real-time wind speed, direction, temperature, humidity
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# ---- Server Configuration ----
HOST=0.0.0.0
PORT=8000
FRONTEND_URL=http://localhost:3000

# ---- Mode ----
# Set to true for demo mode (simulated traffic data)
# Set to false to use real camera feeds with YOLOv8
SIMULATION_MODE=true

# ---- Camera Feed URLs (Optional - only needed when SIMULATION_MODE=false) ----
# Supports RTSP, MJPEG, and HTTP streams
# Example: http://cameras.example.com/mjpg/video.mjpg
CAMERA_FEED_URL_1=
CAMERA_FEED_URL_2=
CAMERA_FEED_URL_3=

# ---- Database ----
# SQLite for local development, PostgreSQL for production
DATABASE_URL=sqlite:///./ecolens.db

# ---- Processing Intervals (seconds) ----
FRAME_INTERVAL=5
SENSOR_UPDATE_INTERVAL=5
WEATHER_UPDATE_INTERVAL=300

# ---- Map Configuration ----
MAP_CENTER_LAT=40.7580
MAP_CENTER_LNG=-73.9855

# ---- Frontend ----
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
